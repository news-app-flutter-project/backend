{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/utils/*": ["utils/*"],
      "@/controllers/*": ["controllers/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/apis/*": ["apis/*"],
      "@/swagger/*": ["swagger/*"],
      "@/common/*": ["common/*"],
      "@/database/*": ["database/*"],
      "@/cron/*": ["cron/*"]
    },
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
